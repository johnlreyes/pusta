<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="
		http://www.liquibase.org/xml/ns/dbchangelog 
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	
	<changeSet id="5.1" author="john">
		<createTable tableName="draw_history">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="user_data_id" type="int">
				<constraints nullable="false" />
			</column>
			<column name="game_combination_id" type="int">
				<constraints nullable="false" />
			</column>
		</createTable>
	</changeSet>
    <changeSet id="5.2" author="john">
		<createSequence
			sequenceName="seq_draw_history"
			incrementBy="1"
			startValue="1"
		/>
	</changeSet>
    <changeSet id="5.3" author="john">
		<addForeignKeyConstraint
			constraintName="fk_draw_history_user_data_id"
			baseTableName="draw_history"
			baseColumnNames="user_data_id"
			referencedTableName="user_data"
			referencedColumnNames="id"
		/>
        <addForeignKeyConstraint
			constraintName="fk_draw_history_game_combination_id"
			baseTableName="draw_history"
			baseColumnNames="game_combination_id"
			referencedTableName="game_combination"
			referencedColumnNames="id"
		/>
	</changeSet>
    <changeSet id="5.4" author="john">
		<addUniqueConstraint
			tableName="draw_history"
			columnNames="user_data_id,game_combination_id"
			constraintName="u_draw_history"/>
	</changeSet>
</databaseChangeLog>
